{
    "name": "acer-nitro-fan-control-for-linux",
    "version": "1.0.0",
    "description": "Desktop app for control Fans on Acer Nitro 5 AN515",
    "main": "main/src/index.js",
    "scripts": {
      "build": "rimraf ./main/src && tsc && npm run copy",
      "copy2": "copyfiles -u 1 ./src/**/*.html ./src/**/*.* ./src/socket.js ./main/src && cp ./package* ./main/",
      "copy": "cp package.json ./main/package.json && copyfiles -u 1 ./src/**/*.html ./src/**/*.* ./main/src",
      "extract-node-binary2": "exit; DIR=./main/assets/bin; tar -xvzf ./src/assets/bin/node-v16.19.1-linux-x64.tar.gz -C $DIR && chown -R $USER:$USER $DIR && echo \"Change owner to $USER \"",
      "fix-directory2": "DIR=./main/assets/bin; [ ! -d \"$DIR\" ] && mkdir -p $DIR && echo \"$DIR created!\"",
      "dev": "npm run build && electron --no-sandbox .",
      "watch": "tsc -w",
      "lint": "eslint -c .eslintrc --ext .ts ./src",
      "start": "electron .",
      "pack": "electron-builder --dir",
      "dist": "npm run build && electron-builder --publish never"
    },
    "keywords": [
      "Fan Control",
      "NBFC Integration",
      "typescript",
      "socket"
    ],
    "build": {
      "appId": "io.mm-tecnologia.mm-sense",
      "productName": "MM Sense",
      "artifactName": "mm-sense-${os}.${ext}",
      "asar": true,
      "asarUnpack": [
        "main"
      ],
      "files": [
        "main"
      ],
      "mac": {
        "target": "dmg",
        "category": "public.app-category.utilities"
      },
      "linux": {
        "target": "AppImage",
        "category": "Utility"
      },
      "win": {
        "target": "nsis"
      }
    },
    "author": "Felipe Marques <contato@felipemarques.com.br>",
    "license": "CC0-1.0",
    "devDependencies": {
      "@typescript-eslint/eslint-plugin": "^4.33.0",
      "@typescript-eslint/parser": "^4.33.0",
      "copyfiles": "^2.4.1",
      "electron": "^17.2.0",
      "electron-builder": "^23.0.3",
      "eslint": "^7.32.0",
      "rimraf": "^3.0.2",
      "typescript": "^4.5.5"
    },
    "dependencies": {
      "@types/uuid": "^9.0.1",
      "@vscode/sudo-prompt": "^9.3.1",
      "fix-path": "^3.0.0",
      "native-is-elevated": "^0.4.3",
      "uuid": "^9.0.0",
      "ws": "^8.13.0"
    }
  }
  